<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entry.AnyUser" table="any_user" schema="anymall">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(255)"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(255)"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="tinyint(1)" />
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(255)" />
        </property>
        <property name="ctime">
            <column name="ctime" sql-type="timestamp" />
        </property>
        <property name="face">
            <column name="face" sql-type="varchar(255)" />
        </property>
    </class>
</hibernate-mapping>